@model Readability_2.Models.results

@{
    ViewData["Title"] = "Reading Score Results";
}

<h1>Reading Score Results</h1>

<div>
    <h4>Results</h4>

    Using the Flesch-Kincaid grade level formula: 0.39 x (words/sentences) + 11.8 x (syllables/words) - 15.59.
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GradeLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GradeLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WordCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WordCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SentCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SentCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SylCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SylCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.inputText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.inputText)
        </dd>
    </dl>
</div>
